" ---- Default {{{
" [ tab width ]
set tabstop=2
" [ tab type ]
set expandtab
" [ vim auto tab width ]
set shiftwidth=2
" [ Octal2Decimal ]
set nrformats-=octal
" [ folow block select ]
set virtualedit=block
" [ wraparound ]
set whichwrap=b,s,[,],<,>
" [ backspace expansion ]
set backspace=indent,eol,start
" [ case insensitive ]
set ignorecase
" [ smart case search ]
set smartcase
" }}}
" ---- Screen {{{
" [ Display line number ]
set number
" [ Display title ]
set title
" [ Display coordinate ]
set ruler
" [ Cursor highlight ]
set cursorcolumn
" [ Display statusline ]
set laststatus=2
" [ Encode ]
set encoding=utf-8
scriptencoding utf-8
" }}}
" ---- Color Scheme {{{
syntax on
colorscheme molokai
set t_Co=256
" }}}
