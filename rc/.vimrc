" ---- Default {{{
" [ tab width ]
tabstop=2
" [ tab type ]
expandtab
" [ vim auto tab width ]
shiftwidth=2
" [ return auto indent ]
smartindent
" [ Octal2Decimal ]
nrformats-=octal
" [ folow block select ]
virtualedit=block
" [ wraparound ]
whichwrap=b,s,[,],<,>
" [ backspace expansion ]
backspace=indent,eol,start
" [ case insensitive ]
set ignorecase
" [ smart case search ]
set smartcase
" }}}
" ---- Screen {{{
" [ Display line number ]
set number
" [ Display title ]
set title
" [ Display coordinate ]
set ruler
" [ Cursor highlight ]
set cursorcolumn
" [ Display statusline ]
set laststatus=2
" [ Encode ]
set encoding=utf-8
scriptencoding utf-8
" }}}
" ---- Color Scheme {{{

" }}}
